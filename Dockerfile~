FROM ubuntu:16.04

RUN apt-get update -y && apt-get install -y gcc python 

ADD *.c /etc/
ADD *.py /etc/

RUN gcc /etc/echoserver.c -o /etc/echoserver
RUN gcc -std=c99 /etc/lab1.c -o /etc/lab1
RUN gcc -std=c99 /etc/lab2.c -o /etc/lab2
RUN gcc -std=c99 /etc/lab3.c -o /etc/lab3
RUN gcc -std=c99 /etc/lab4.c -o /etc/lab4

CMD ["/bin/bash"]